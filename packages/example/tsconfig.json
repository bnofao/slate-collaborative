{
  "include": [
    "src/**/*"
  ],
  "extends": "./extend.tsconfig.json",
  "compilerOptions": {
    "rootDir": "../",
    "baseUrl": "./src",
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "declaration": false,
    "declarationMap": false,
    "noEmit": true
  },
  "references": [
    {
      "path": "../client"
    },
    {
      "path": "../backend"
    }
  ]
}
